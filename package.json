{
    "name": "yearn-protocol",
    "devDependencies": {
        "ethlint": "^1.2.5",
        "husky": "^4.3.0",
        "prettier": "^2.1.1",
        "prettier-plugin-solidity": "^1.0.0-alpha.57",
        "pretty-quick": "^3.0.2"
    },
    "scripts": {
        "lint:check": "pretty-quick --check --verbose --pattern **/*.sol **/*.json",
        "lint:fix": "pretty-quick --staged --verbose --pattern **/*.sol **/*.json"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn lint:fix"
        }
    }
}
